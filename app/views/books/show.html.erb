<div class="row">
  <div class="col-md-4 mb-4">
    <% if @book.image.attached? %>
      <%= image_tag @book.image, class: 'img-fluid rounded shadow', alt: @book.title %>
    <% else %>
      <%= image_tag 'placeholder_book.svg', class: 'img-fluid rounded shadow', style: 'padding: 60px; background-color: #f8f9fa; min-height: 400px;', alt: 'Book placeholder' %>
    <% end %>
  </div>

  <div class="col-md-8">
    <h1 class="mb-4"><%= @book.title %></h1>

    <div class="mb-3">
      <h5 class="text-muted">Author</h5>
      <p class="fs-5"><%= @book.author %></p>
    </div>

    <div class="mb-3">
      <h5 class="text-muted">Price</h5>
      <p class="fs-4 text-success fw-bold">$<%= @book.price %></p>
    </div>

    <div class="mb-3">
      <h5 class="text-muted">Stock</h5>
      <p class="fs-5">
        <% if @book.stock > 0 %>
          <span class="badge bg-success"><%= @book.stock %> available</span>
        <% else %>
          <span class="badge bg-danger">Out of stock</span>
        <% end %>
      </p>
    </div>

    <div class="mb-4">
      <h5 class="text-muted">Description</h5>
      <p class="fs-6"><%= @book.description %></p>
    </div>

    <% if logged_in? && !admin? %>
      <div class="mb-3">
        <div class="d-flex gap-2">
          <% if @book.in_stock? %>
            <%= button_to 'Add to Cart', add_item_cart_path(book_id: @book.id), method: :post, class: 'btn btn-success btn-lg flex-fill' %>
          <% else %>
            <button class="btn btn-secondary btn-lg flex-fill" disabled>Out of Stock</button>
          <% end %>
          <% if in_wishlist?(@book) %>
            <%= button_to wishlist_remove_item_path(current_user.wishlist_items.find_by(book: @book).id), method: :delete, class: 'btn btn-outline-danger btn-lg', title: 'Remove from wishlist' do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
              </svg>
            <% end %>
          <% else %>
            <%= button_to add_item_wishlist_path(book_id: @book.id), method: :post, class: 'btn btn-outline-primary btn-lg', title: 'Add to wishlist' do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex gap-2 mt-4">
  <% if admin? %>
    <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-warning' %>
    <%= button_to 'Delete', @book, method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this book?' }, class: 'btn btn-danger' %>
  <% end %>
  <%= link_to 'Back', books_path, class: 'btn btn-secondary' %>
</div>
