<h1>Books</h1>

<%= link_to 'New Book', new_book_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td>$<%= book.price %></td>
        <td><%= book.stock %></td>
        <td>
          <%= link_to 'Show', book, class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-sm btn-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
