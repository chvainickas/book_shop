<div class="card h-100">
  <div class="position-relative">
    <% if book.image.attached? %>
      <%= image_tag book.image, class: 'card-img-top', style: 'height: 250px; object-fit: cover;', alt: book.title %>
    <% else %>
      <%= image_tag 'placeholder_book.svg', class: 'card-img-top', style: 'height: 250px; object-fit: contain; padding: 40px; background-color: #f8f9fa;', alt: 'Book placeholder' %>
    <% end %>
    <% unless book.in_stock? %>
      <div class="position-absolute top-50 start-50 translate-middle">
        <span class="badge bg-danger fs-4 px-4 py-2">OUT OF STOCK</span>
      </div>
    <% end %>
    <% if logged_in? && !admin? %>
      <div class="position-absolute top-0 end-0 p-2">
        <% if in_wishlist?(book) %>
          <%= button_to wishlist_remove_item_path(current_user.wishlist_items.find_by(book: book).id), method: :delete, class: 'btn btn-sm btn-light rounded-circle p-2', style: 'width: 40px; height: 40px;', title: 'Remove from wishlist' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-heart-fill" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
            </svg>
          <% end %>
        <% else %>
          <%= button_to add_item_wishlist_path(book_id: book.id), method: :post, class: 'btn btn-sm btn-light rounded-circle p-2', style: 'width: 40px; height: 40px;', title: 'Add to wishlist' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
              <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= book.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
    <% if book.category %>
      <span class="badge bg-secondary mb-2"><%= book.category.name %></span>
    <% end %>
    <p class="card-text"><%= truncate(book.description, length: 100) if book.description %></p>
    <p class="text-success fw-bold">$<%= book.price %></p>
    <p class="text-muted">Stock: <%= book.stock %></p>
  </div>
  <div class="card-footer bg-transparent">
    <% if logged_in? && !admin? %>
      <% if book.in_stock? %>
        <%= button_to 'Add to Cart', add_item_cart_path(book_id: book.id), method: :post, class: 'btn btn-sm btn-success w-100 mb-2' %>
      <% else %>
        <button class="btn btn-sm btn-secondary w-100 mb-2" disabled>Out of Stock</button>
      <% end %>
    <% end %>
    <div class="d-flex gap-2">
      <%= link_to 'View', book, class: "btn btn-sm btn-info #{admin? ? 'flex-fill' : 'w-100'}", data: { turbo_frame: "_top" } %>
      <% if admin? %>
        <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-sm btn-warning flex-fill', data: { turbo_frame: "_top" } %>
        <%= button_to 'Delete', book, method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this book?' }, class: 'btn btn-sm btn-danger flex-fill', form: { style: 'flex: 1' } %>
      <% end %>
    </div>
  </div>
</div>
