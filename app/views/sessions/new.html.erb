<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">Log In</h2>

        <%= form_with(url: login_path, local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :email, class: 'form-label' %>
            <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
          </div>

          <div class="mb-3">
            <%= form.label :password, class: 'form-label' %>
            <%= form.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
          </div>

          <div class="d-grid">
            <%= form.submit "Log In", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          Don't have an account? <%= link_to 'Sign up', signup_path %>
        </div>
      </div>
    </div>
  </div>
</div>
